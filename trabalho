<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Rodrigo Trabalho</title>
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            font-family: Arial, sans-serif;
            margin: 0;
            overflow: hidden;
        }

        #botaoContainer {
            position: relative;
            width: 100%;
            height: 100%;
        }

        #botaoFugitivo, #botaoAleatorio {
            position: absolute;
            margin: 20px;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            transition: background-color 0.3s;
            z-index: 1000; /* Coloca os botões na frente */
        }

        #botaoFugitivo {
            top: 10%;
            left: 70%;
            transform: translate(-50%, 0);
        }

        #botaoAleatorio {
            top: 20%;
            left: 30%;
            transform: translate(-50%, 0);
        }

        #botaoFugitivo:hover, #botaoAleatorio:hover {
            background-color: #ff6f61;
            color: white;
        }

        #container {
            position: relative;
            width: 400px;
            height: 400px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        #balao {
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: red;
            border-radius: 50%;
            transition: height 0.5s, width 0.5s;
        }

        #bomba {
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: black;
            border-radius: 50%;
            cursor: pointer;
        }

        #matriz {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
            width: auto;
        }

        h1 {
            color: white;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }
    </style>
